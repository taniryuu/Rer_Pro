      <%= "<<未開始>>" %>
    <% when "inactive" %>
      <%= "<<#{l(Time.parse(@step.canceled_date), format: :shortdate)}に凍結済>>" %>
    <% when "in_progress" %>
      <%= "<<進捗中>>完了予定日：#{l(Time.parse(@step.scheduled_complete_date), format: :shortdate)}" %>
      <%= "(#{@step.completed_tasks_rate}%)" %>
