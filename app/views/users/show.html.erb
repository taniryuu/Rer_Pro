  <% @limit_change_notices_list.each do |user_leads| %>
    <p><%= user_name(user_leads.first.user_id) %></p>
    <% user_leads.each do |lead| %>
      <p><%= lead.customer_name %></p>
    <% end %>
  <% end %>
<% end %>

